<%- include('./components/header', { title: 'Admin Login', user: null }) %>

<div style="max-width: 400px; margin: 100px auto; padding: 30px; background: #fff0ec; border-radius: 12px;">
  <h3 style="text-align: center;">🔐 Admin Login</h3>
  <% if (error) { %>
    <p style="color: red; text-align: center;"><%= error %></p>
  <% } %>

  <form method="POST" action="/quizAdmin/quizAdminLogin">

    <input type="text" name="username" placeholder="Username" required style="width: 100%; margin-bottom: 15px; padding: 10px;">
    <input type="password" name="password" placeholder="Password" required style="width: 100%; margin-bottom: 20px; padding: 10px;">
    <button type="submit" style="width: 100%; background: #D65A38; color: white; padding: 10px; border: none; border-radius: 8px;">Login</button>
  </form>
</div>

<%- include('./components/footer') %>

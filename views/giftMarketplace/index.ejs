<!DOCTYPE html>
<html lang="en">
<head>
    <title>Gift Marketplace</title>
</head>
<body>
    <div class="page-wrapper">
        <%- include('../components/header', { title: 'The Secret Angel Game', user }) %>

        <main class="gifts-container">
    <div class="gifts-container">
   
 <% if (user && buyer === "true") { %>
  <div class="add-gift-container">
    <a href="/gifts/add" class="add-gift-btn">Add A Gift</a>
  </div>
<% } %>
<% console.log("USER:", user); %>
<%= user && user.buyer %>



    <h1 class="gifts-title">Gifts</h1>

    <div class="gifts-list">
        <% gifts.forEach(gift => { %>
            <div class="gift-item">
                <img src="<%= gift.imageUrl || '/images/default.jpg' %>" alt="<%= gift.name %>" class="gift-image">
                <div class="gift-details">
                    <h2 class="gift-name"><%= gift.name %></h2>
                    <p class="gift-description"><%= gift.description %></p>
                    <p class="gift-price">$<%= gift.price.toFixed(2) %></p>
                    <a href="/gifts/<%= gift._id %>" class="gift-detail-btn">View Details</a>
                </div>
            </div>
        <% }) %>
    </div>

</div>
</main>

<%- include('../components/footer') %>
</div>
</body>
</html>

<style>
    html, body {
    height: 100%;
    margin: 0;
}

body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

main {
    flex: 1;
}

.gifts-container {
    background-color: #263745;
    padding: 50px;
    color: white;
    text-align: center;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}


    .gifts-title {
        font-size: 36px;
        margin-bottom: 30px;
    }

    .gifts-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        margin-bottom: 30px;
    }

    .gift-item {
        background-color: #3C4A59;
        padding: 20px;
        border-radius: 10px;
        width: 250px;
        text-align: center;
    }

    .gift-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 8px;
    }

    .gift-details {
        margin-top: 10px;
    }

    .gift-name {
        font-size: 24px;
        margin: 10px 0;
    }

    .gift-description {
        font-size: 14px;
        color: #bbb;
    }

    .gift-price {
        font-size: 20px;
        margin: 10px 0;
        color: #FFD700;
    }

    .gift-detail-btn {
        background-color: #559A6A;
        padding: 10px 20px;
        color: white;
        text-decoration: none;
        font-size: 16px;
        border-radius: 5px;
    }

    .add-gift-container {
        margin-top: 30px;
    }

    .add-gift-btn {
        background-color: #559A6A;
        padding: 15px 30px;
        color: white;
        text-decoration: none;
        font-size: 18px;
        border-radius: 5px;
    }
</style>

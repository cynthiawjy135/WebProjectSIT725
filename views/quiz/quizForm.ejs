<%- include('components/header', { title, user }) %>

<section style="display: flex; justify-content: center; margin-top: 40px;">
  <div class="center-align" style="text-align: center;">
    <div style="background-color: #D65A38; padding: 10px 20px; border-radius: 12px; display: inline-block; color: white;">
      <h5 style="margin: 5px;">Career & Gift Match Quiz</h5>
      <p style="margin: 0; font-size: 14px;">Find the Perfect Gift – Tailored Just for Them!</p>
    </div>
  </div>
</section>

<section style="display: flex; justify-content: center; margin-top: 20px;">
  <form action="/quiz/submit" method="POST"
        style="width: 90%; max-width: 700px; height: 550px; overflow-y: auto; padding: 20px;
               background-color: #fff0ec; border-radius: 14px; box-shadow: 0 4px 10px rgba(0,0,0,0.1);">
    
    <!-- Q1 -->
    <div style="margin-bottom: 30px;">
      <p><strong>❓ Q1. Who is the gift for?</strong></p>
      <p><label><input type="radio" name="recipient" value="friend" required /> 🧑‍🎓 A close friend</label></p>
      <p><label><input type="radio" name="recipient" value="partner" /> ❤️ My partner</label></p>
      <p><label><input type="radio" name="recipient" value="family" /> 👪 A family member</label></p>
      <p><label><input type="radio" name="recipient" value="colleague" /> 🤝 A colleague or acquaintance</label></p>
    </div>

    <!-- Q2 -->
    <div style="margin-bottom: 30px;">
      <p><strong>❓ Q2. What’s their age group?</strong></p>
      <p><label><input type="radio" name="age" value="under12" required /> 🍼 Under 12</label></p>
      <p><label><input type="radio" name="age" value="13to20" /> 🧒 13–20</label></p>
      <p><label><input type="radio" name="age" value="21to35" /> 👨 21–35</label></p>
      <p><label><input type="radio" name="age" value="36plus" /> 👵 36+</label></p>
    </div>

    <!-- Q3 -->
    <div style="margin-bottom: 30px;">
      <p><strong>❓ Q3. What’s your budget range?</strong></p>
      <p><label><input type="radio" name="budget" value="under20" required /> 🪙 Under $20</label></p>
      <p><label><input type="radio" name="budget" value="20to50" /> 🧧 $20–$50</label></p>
      <p><label><input type="radio" name="budget" value="50to100" /> 💵 $50–$100</label></p>
      <p><label><input type="radio" name="budget" value="100plus" /> 💎 $100+</label></p>
    </div>

    <!-- Submit Button -->
    <div class="center-align" style="margin-top: 30px;">
      <button type="submit" class="btn-large" style="background-color: #D65A38; color: white; border-radius: 12px; padding: 12px 24px;">
        🎁 Get Your Gift Match!!!!
      </button>
    </div>
  </form>
</section>

<%- include('components/footer') %>

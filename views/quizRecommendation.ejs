<%- include('./components/header', { title: 'Gift Suggestions', user }) %>

<section style="background-color: #fbeae6; min-height: 100vh; padding: 40px 20px;">
  <div style="
    max-width: 650px;
    margin: auto;
    padding: 35px 25px 50px;
    background-color: #fff5f3;
    border-radius: 16px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.05);
    text-align: center;
  ">

    <!-- Title -->
    <h2 style="color: #D65A38; font-size: 28px; margin-bottom: 10px;">
      🎁 Recommended Gifts for <%= username %>
    </h2>
    <p style="font-size: 16px; color: #444;">
      Based on your quiz answers, here are our top picks:
    </p>

    <!-- Suggestions -->
    <ul style="margin: 30px 0; padding: 0; list-style: none;">
      <% suggestions.forEach(item => { %>
        <li style="
          background-color: #ffe2da;
          margin: 12px auto;
          padding: 15px;
          border-radius: 10px;
          width: 90%;
          text-align: left;
          font-size: 16px;
        ">
          <strong><%= item.title %></strong>
          <% if (item.description) { %>
            <br><small style="color: #555;"><%= item.description %></small>
          <% } %>
        </li>
      <% }) %>
    </ul>

    <!-- Divider -->
    <hr style="width: 60%; border: 1px dashed #D65A38; margin: 35px auto 15px;">

    <!-- Message -->
    <p style="margin-bottom: 14px; color: #333;">Not satisfied with the suggestions?</p>

    <!-- Redo Button -->
    <a href="/quizForm" style="
      display: inline-block;
      background-color: #D65A38;
      color: white;
      padding: 12px 28px;
      border-radius: 8px;
      font-weight: bold;
      text-decoration: none;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    ">🔁 Redo Quiz</a>

  </div>
</section>

<%- include('./components/footer') %>
